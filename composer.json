{
  "name": "monochromist/php-arguments",
  "type": "library",
  "description": "Utility class for method arguments validation.",
  "homepage": "https://github.com/monochromist/php-arguments",
  "keywords": ["php", "method", "function", "arguments", "validation", "utility"],
  "license": "MIT",
  "authors": [{
    "name": "Marcos Menegazzo",
    "email": "marcos.menegazzo@gmail.com"
  }],
  "require": {
    "php": ">=5.3.2"
  },
  "require-dev": {
    "phpunit/phpunit": "4.8.24",
    "phpdocumentor/phpdocumentor": "2.*"
  },
  "config": {
    "bin-dir": "bin"
  },
  "autoload": {
    "psr-4": {
      "monochromist\\": "src",
      "monochromist\\tests\\": "tests"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "monochromist\\tests\\": "tests"
    }
  }
}
